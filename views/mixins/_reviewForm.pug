mixin reviewForm(store)
    form.reviewer(action=`/reviews/${store._id}` method="POST")
        textarea(name="text" placeholder="Did you try this store? Have something to say? Leave a review...")
        .reviewer__meta
            .reviewer__stars
                each num in [5,4,3,2,1]
                    input(type="radio" required id=`star${num}` value=num name="rating")
                    label(for=`star${num}`) #{num} stars
            input.button(type="submit" value="Submit review ->")